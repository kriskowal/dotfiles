  [alias]
      ap = add -p
      au = add --update
      br = branch
      brav = branch -av
      ci = commit
      cia = commit --amend
      ciam = commit --amend -m
      cian = commit --amend --no-edit
      cif = commit --amend -C HEAD
      cim = commit -m
      cinit = commit -m 'Ex nihilo' --allow-empty
      co = checkout
      cod = checkout dev
      com = checkout master
      cood = checkout origin/dev
      coom = checkout origin/master
      cp = cherry-pick
      d = diff
      dc = diff --cached
      dcs = diff --cached --stat
      dd = diff
      ds = diff --stat
      fe = fetch
      fo = fetch origin
      initt = !git init && echo "ref: refs/heads/trunk" > .git/HEAD
      lg = log --graph --pretty=brief
      lgtm = log --graph --pretty=brief origin/master^..HEAD
      lgto = log --graph --pretty=brief origin/dev^..HEAD
      lo = log --pretty=brief --no-merges
      poke = commit -m 'Poke continuous integration' --allow-empty
      pr = pull-request
      r = reset
      ra = rebase --abort
      rb = rebase
      rc = rebase --continue
      rh = reset --hard
      ri = rebase -f -i
      riod = rebase -f -i origin/dev
      riom = rebase -f -i origin/master
      rion = rebase -f -i origin/main
      riot = rebase -f -i origin/trunk
      rl = reflog --pretty=briefreflog
      rod = rebase origin/dev
      rom = rebase origin/master
      ron = rebase origin/main
      rot = rebase origin/trunk
      rp = reset -p
      rs = rebase --skip
      s = stash
      sik = stash --include-untracked --keep-index
      st = status --short --branch
      stop = stash pop
      suri = submodule update --recursive --init

  [core]
      # Use less as our pager, turn off the -c option if it was specified in $LESS,
      # also don't use -S as per git default
      pager = "less -+c -FRX"

  [branch]
    autosetuprebase = always

  [color]
      # Color all commands automatically
      ui = auto

  [column]
      ui = auto

  [log]
      abbrevCommit = true
      date = relative
      decorate = true

  [diff]
    algorithm = patience
      renames = copies

  [grep]
      extendedRegexp = true

  [fetch]
      prune = true

  [branch]
      ; Track when branching and rebase by default
      autosetupmerge = always
      autosetuprebase = always

  [rebase]
      stat = true
    autosquash = true
      autostash = true
      ; instructionFormat = %s [%an]%d
      ; instructionFormat = [%ad] <%an> %s %d
      instructionFormat = <%an> %s%d
      ; %an author name
      ; %ar author when
      ; %cr commit when

  [rerere]
      autoupdate = true
    enabled = true

  ; [push]
  ; 	default = matching

  [apply]
      # Fix all whitespace sins when applying patches
      whitespace = fix

  [grep]
      extendedRegexp = true

  ; log formats
  [pretty]
      brief = %C(red)%h%Creset %C(green)%cd%Creset %C(bold blue)<%an>%Creset %s%C(yellow)%d%Creset
      briefreflog = %C(green)%gd %C(red)%h%Creset %C(bold blue)<%gn>%Creset %gs

  [url "ssh://git@github.com/"]
    insteadOf = https://github.com/

